<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/questions.css">
    <link href="https://fonts.googleapis.com/css?family=Chilanka|Rokkitt&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/profile">Back to profile</a></li>
        <li><a href="/logOut">Logout</a></li>
        <li><i class="live-search-loading fa fa-spinner fa-spin"></i></li>
      </ul>
    </nav>

    <section class="maincontainer">
      <section class="formContainer">
        <h2>Forum</h2>
      </section>
      <section class="formContainer">
        <form class="" method="Post" action="/questions">
          <input class="postInput" type="text" name="question" value="" placeholder="Question">
          <button type="submit" name="button" class="postButton">Post question</button>
        </form>
      </section>
    </section>


  <% for(let i=0;i<questions.length; i++){%>
    <li class="Boxes">
      <%
      console.log("comparing userid to questionid",user._id, questions[i].user)
      let hidden = "hidden"
      if(user._id.equals(questions[i].user)){
        hidden = ""
          } %>
      <h4 class="delete <%= hidden %>" >X</h4>

      <div class="post">
        <div class="person">
          <p class="name">Question posted by:<%=user.local.username%></p>
        </div>
        <div class="question">
          <h3>Question</h3>
          <h3 class="postTitle"><%=questions[i].question%></h3>
          <% for(let j=0;j<questions[i].comment.length; j++){%>
          <p class="postText"><%=questions[i].comment[j]%></p>
  <% } %>
          <input type="text" name="comment" placeholder="Comment" class="commentInput">

          <button type="submit" name="button" class="btn black commentButton" placeholder="Comment Here">Comment</button>

        </div>

      </div>
      <div class="actions">
          <i class="fas fa-thumbs-up thumbsUp"></i>
          <i class="fas fa-thumbs-down thumbsDown"></i>
          <span class="result"><%=questions[i].thumbsUp%></span>
      </div>
    </li>
    <% } %>





      <script type="text/javascript" src="../js/main.js">

      </script>
  </body>
</html>
